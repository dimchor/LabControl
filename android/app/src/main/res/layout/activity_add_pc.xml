<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPCActivity"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/custom_turquoise">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add PC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="start|center_vertical" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/editTextInternetProtocolAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="IP Address"
            android:inputType="text"
            android:paddingVertical="12dp" />

        <EditText
            android:id="@+id/editTextMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="MAC Address (optional)"
            android:inputType="text"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/buttonAddPC"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:textSize="18sp"
            android:backgroundTint="@color/custom_turquoise"
            android:text="Add"
            android:textColor="@color/custom_black" />

    </LinearLayout>

</LinearLayout>